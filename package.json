{
	"name": "worker-email",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"license": "AGPL-3.0-only",
	"scripts": {
		"start:dev": "wrangler dev",
		"deploy:prod": "wrangler publish --env production",
		"fmt:lint": "eslint . --ext .ts,.tsx --fix",
		"fmt:pretty": "prettier --write .",
		"fmt:all": "npm run fmt:lint && npm run fmt:pretty",
		"dep:update": "npm-check-updates upgrade && npm run dep:install",
		"dep:install": "npm install --no-fund --no-audit",
		"type:check": "tsc --noEmit",
		"docker:build": "DOCKER_BUILDKIT=0 docker image build --tag ghcr.io/lbenicio/cloudflare-email:latest --tag ghcr.io/lbenicio/cloudflare-email:$(node -p \"require('./package.json').version\") .",
		"docker:push": "docker image push ghcr.io/lbenicio/cloudflare-email:latest",
		"docker:release": "npm run docker:build && npm run docker:push",
		"release:gen": "node scripts/generate_release.mjs --verbose --tag --push --bump"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20230419.0",
		"itty-router": "^4.0.9",
		"npm-check-updates": "^18.3.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"prettier": "^2.8.8",
		"typescript": "^5.0.4",
		"wrangler": "^4.0.0"
	},
	"author": {
		"name": "Leonardo Benicio",
		"email": "hi@lbenicio.dev"
	},
	"bugs": {
		"url": "https://github.com/lbenicio/cloudflare-email/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lbenicio/cloudflare-email.git"
	},
	"keywords": [
		"cloudflare",
		"email",
		"worker",
		"serverless",
		"typescript",
		"itty-router"
	]
}
